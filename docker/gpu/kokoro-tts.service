[Unit]
Description=Kokoro TTS GPU Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/echo/projects/kokoro/docker/gpu
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
User=echo
Group=echo

[Install]
WantedBy=multi-user.target
